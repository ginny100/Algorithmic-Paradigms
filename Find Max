#include <iostream>
#include <limits.h>
using namespace std;

int maximum_index(int*, int) ;
int find_element(int nums[], int array_size)
{
  int maxx = maximum_index(nums, array_size);
  cout << "Maximum number in the array is " << nums[maxx] << " at index " << maxx << endl;
}	

int main()
{
	int array_size = 9;
  int nums[] = {2, 4, 6, 3, 5, 7, 9, 1, 8};
	find_element(nums, array_size);
  return 0;
}

// takes an array and returns the index of maximum
// number in that array
int maximum_index(int array[], int array_size) 
{
  // initialize index to 0
  int max_index = -1;
  // set max value to least number
  int max_val = INT_MIN;
  // loop thru each element in array
  for(int i=0; i<array_size; i++)
  {
    if (max_val < array[i]) 
    {
      max_val = array[i];
      max_index = i;
    }
  }
  return max_index;
}

// DO NOT UNCOMMENT -- JUST FOR REFERENCE
// array = [2, 4, 6, 3, 5, 7, 9, 1, 8] //
